@using SocialNetwork.Core.Application.Helpers;
@using SocialNetwork.Core.Application.ViewModels.User;
@inject IHttpContextAccessor httpContext;
@{
    var user = httpContext.HttpContext.Session.Get<UserViewModel>("user");
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SocialNetwork</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.3.1/css/bootstrap.min.css">
    <link href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" crossorigin="anonymous">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <!-- Vertical navbar -->
    <div class="vertical-nav bg-white" id="sidebar">

        <div class="py-4 px-3 mb-4 bg-light">
            <div class="media d-flex align-items-center">
                <img src="@(user==null ?"https://th.bing.com/th/id/R.c5ddecc677d10dd4ae1a9216bf75dff7?rik=6nNaZIUE7nrPJg&riu=http%3a%2f%2fpluspng.com%2fimg-png%2finstagram-png-instagram-png-icon-1024.png&ehk=g%2ffN9f%2bnGvDVPmZQMVTHWRh5%2bvzaZK5iHv1a%2bcmGVkg%3d&risl=&pid=ImgRaw&r=0":user.Photo )" alt="..." width="65" class="mr-3 rounded-circle img-thumbnail shadow-sm">
                <div class="media-body">
                    <h4 class="m-0">@(user==null?"Bienvenido":$"{user.Name} {user.LastName}")</h4>
                    <p class="font-weight-light text-muted mb-0">@(user != null ? user.CountFriends<0 ? $"Friends: {user.CountFriends}": "":"")</p>
                </div>
            </div>
        </div>

        <p class="text-gray font-weight-bold text-uppercase px-3 small pb-4 mb-0">Main</p>

        <ul class="nav flex-column bg-white mb-0">
            @if (user != null)
            {
                <li class="nav-item">
                    <a asp-controller="Home" asp-action="Index" class="nav-link text-dark font-italic bg-light">
                        <i class="fa fa-th-large mr-3 text-primary fa-fw"></i>
                        Home
                    </a>
                </li>
                <li class="nav-item">
                    <a asp-controller="Post" asp-action="Index" class="nav-link text-dark font-italic">
                        <i class="fa fa-address-card mr-3 text-primary fa-fw"></i>
                        Posts
                    </a>
                </li>
            }
            else
            {
                <li class="nav-item">
                    <a asp-controller="User" asp-action="Index" class="nav-link text-dark font-italic">
                        <i class="fa fa-cubes mr-3 text-primary fa-fw"></i>
                        Login
                    </a>
                </li>
                <li class="nav-item">
                    <a asp-controller="User" asp-action="Register" class="nav-link text-dark font-italic">
                        <i class="fa fa-picture-o mr-3 text-primary fa-fw"></i>
                        Register
                    </a>
                </li>
            }

         

        </ul>

  
        <ul class="nav flex-column bg-white ">
 
            <p class="text-gray font-weight-bold text-uppercase px-3 small py-4"></p>
            @if (user != null)
            {
                <li class="nav-item">
                    <a asp-controller="User" asp-action="Logout" class="btn btn-primary nav-link text-light font-italic">
                        <i class="fa fa-line-chart mr-3 text-light fa-fw"></i>
                        Logout
                    </a>
                </li>
            }

        </ul>
    </div>
    <!-- End vertical navbar -->
    <!-- Page content holder -->
    <div class="page-content p-5" id="content">
        <!-- Toggle button -->
        <button id="sidebarCollapse" type="button" class="btn btn-light bg-white rounded-pill shadow-sm px-4 mb-4"><i class="fa fa-bars mr-2"></i><small class="text-uppercase font-weight-bold">Toggle</small></button>

        <!-- Demo content -->
        @RenderBody()


    </div>

    <!-- End demo content -->
